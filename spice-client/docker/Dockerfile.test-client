# Build stage
FROM rust:latest as builder

WORKDIR /build

# Copy the entire spice-client project
COPY . .

# Build the test client binary
RUN cargo build --release --bin spice-test-client

# Runtime stage
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && \
    apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

# Copy the binary from builder
COPY --from=builder /build/target/release/spice-test-client /app/spice-test-client

# Make it executable
RUN chmod +x /app/spice-test-client

WORKDIR /app

# Default command
CMD ["/app/spice-test-client"]